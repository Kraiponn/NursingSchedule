<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_nurse3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textResultState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:maxLines="3"
        android:text="ไม่พบข้อมูล\n ตามที่คุณร้องขอ"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView_WorkMateDetail"
        android:layout_margin="10dp"></android.support.v7.widget.RecyclerView>

</RelativeLayout>