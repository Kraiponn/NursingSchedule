<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:color="#f3f7f3" android:width="2dp"/>
            <solid android:color="#fa0339"/>
            <corners
                android:topRightRadius="12dp"
                android:bottomRightRadius="12dp"/>
            <padding
                android:left="17dp" android:right="17dp"
                android:top="9dp" android:bottom="9dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#07a316" android:width="2dp"/>
            <solid android:color="#80000000"/>
            <corners
                android:topRightRadius="12dp"
                android:bottomRightRadius="12dp"/>
            <padding
                android:left="17dp" android:right="17dp"
                android:top="9dp" android:bottom="9dp"/>
        </shape>
    </item>

</selector>